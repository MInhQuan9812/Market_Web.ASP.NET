@model IEnumerable<Trasuanhom15.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin:100px;">
    <button style="margin:20px;">
        @Html.ActionLink("Tạo mới", "Create")
    </button>
    <table class="table">
        <tr>
            <th>
                Mã khách hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailCus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDCus }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDCus }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDCus })
                </td>
            </tr>
        }

    </table>
</div>

