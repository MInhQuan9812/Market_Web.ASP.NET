@model Trasuanhom15.Models.AdminUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login fullheight bg-img bg-img-fixed align-items-center" style="background-image: url(../../Content/images/in_2740_gong-cha_500x300.png)">
    <div class="container">
        <div class="form">
            <h2>Welcome</h2>
            <div style="width:100%">
                @using (Html.BeginForm("SignUp", "AdminUsers", FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    if (@ViewBag.Message != null)
                    {
                        <script type="text/javascript">
                            window.onload = function () {
                            alert("@ViewBag.Message");
                            };
                        </script>
                    }

                    <div class="input">
                        @*<input placeholder="Your email adress" />*@
                        @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { placeholder = "User name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })


                    <div class="input">
                        @*<input placeholder="Your email adress" />*@
                        @Html.EditorFor(model => model.RoleUser, new { htmlAttributes = new { placeholder = "Full name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "text-danger" })

                    <div class="input">
                        @*<input placeholder="Your email adress" />*@
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { placeholder = "Phone" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    <div class="input">
                        @*<input placeholder="Your password" />*@
                        @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { placeholder = "Password", type = "password" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                    <button type="submit">
                        CREATE ACCOUNT
                    </button>
                }
                }
            </div>
            <p>If you have an account?<a href="/AdminUsers/Login">Login</a></p>
        </div>
    </div>
</div>
